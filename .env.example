# LangChain RAG Learning Project Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM API Keys (Choose the ones you want to use)
# =============================================================================

# DeepSeek - Recommended for learning (very affordable)
# Get your key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI - Premium option
# Get your key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Zhipu AI (智谱AI) - Chinese provider
# Get your key from: https://open.bigmodel.cn/
ZHIPU_API_KEY=your_zhipu_api_key_here

# Moonshot AI (月之暗面)
# Get your key from: https://platform.moonshot.cn/
MOONSHOT_API_KEY=your_moonshot_api_key_here

# HuggingFace - Free tier available
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (for metadata storage)
DATABASE_URL=postgresql://user:password@localhost:5432/langchain_rag

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Vector Database Configuration
# =============================================================================

# Chroma settings
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit settings
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./data/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =============================================================================
# Development Settings
# =============================================================================

# Debug mode
DEBUG=true

# Auto-reload on code changes
AUTO_RELOAD=true

# Enable development tools
DEV_TOOLS=true